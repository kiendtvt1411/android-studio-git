<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.DangNhap_DangKy.DangNhap"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/phongnen"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="TRA CỨU \n THÔNG TIN DU LỊCH"
            android:textStyle="bold"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="@color/colorToolbar"
            />

        <TextView
            android:text="Tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:ems="10"
            android:id="@+id/edTenDangNhap"
            android:textColor="@color/colorWhite"
            android:hint="Nhập tên đăng nhập..."
            />

        <TextView
            android:text="Mật Khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edMatKhau"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:hint="Nhập mật khẩu..."
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Đăng nhập"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDangNhap"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="25sp"
                android:background="@android:color/holo_purple"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="Đăng kí"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:id="@+id/btnDangKi"
                android:layout_weight="1"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="35sp"
                android:background="@android:color/holo_purple"
                android:textColor="@android:color/background_light"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

