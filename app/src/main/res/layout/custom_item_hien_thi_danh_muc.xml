<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="190dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp"
    android:id="@+id/cvDiaDiem"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/earth"
            android:id="@+id/imgHinhDanhMucDiaDiem"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quan an vat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/tvTenDanhMucDiaDiem"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="260 Doi Can, Lieu Giai, Ba Dinh, Ha Noi"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/colorGray"
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tvDiaChiDanhMucDiaDiem"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>