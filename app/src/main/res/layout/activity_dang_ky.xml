<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".View.DangNhap_DangKy.DangKy">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Tên đăng nhập"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.01"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:hint="enter your account"
            android:id="@+id/edtDangKyUsername"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Họ và tên"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.06"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:hint="enter your name"
            android:gravity="center_vertical"
            android:id="@+id/edtHoTen"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.08"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"

            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:hint="enter your email"
            android:id="@+id/edtEmailDangKy"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.06"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"

            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:hint="enter your password"
            android:id="@+id/edtDangNhapPassword"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Nhập lại mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:layout_weight="0.03" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:hint="enter your password"
            android:id="@+id/edtDangNhapPasswordNhapLai"
            android:gravity="center_vertical" />

    </LinearLayout>

    <Button
        android:text="Đăng ký"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDangKy"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_gravity="center_horizontal" />
</LinearLayout>


