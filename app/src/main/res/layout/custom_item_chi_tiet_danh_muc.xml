<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/khungcanh"
            android:scaleType="centerCrop"
            android:id="@+id/imgHinhDiaDiaDanhMuc"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bún chả Hương Liên"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="20sp"
                android:id="@+id/tvTenDiaDiemDanhMuc"
                />
            <RatingBar
                android:id="@+id/ratingDiaDiem"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                android:layout_marginLeft="5dp"
                android:transformPivotX="0dp"
                android:translationY="0dp"
                android:theme="@style/DoiMauRatingBar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:id="@+id/tvDiaChiDiaDiemDanhMuc"
                android:text=" \24 Lê Văn Hưu, Phạm Đình Hồ, Hai Bà Trưng, Hà Nội"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thêm"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:id="@+id/tvXemThemDiaDiemDanhMuc"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>